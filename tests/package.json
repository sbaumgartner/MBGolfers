{
  "name": "golf-playgroups-tests",
  "version": "1.0.0",
  "description": "Automated tests for Golf Playgroups application",
  "type": "commonjs",
  "scripts": {
    "configure": "node configure-from-outputs.js",
    "check": "node setup-check.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:api": "NODE_OPTIONS='--experimental-vm-modules' jest tests/api --runInBand",
    "test:e2e": "playwright test",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --runInBand",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand",
    "playwright:install": "playwright install"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.478.0",
    "@aws-sdk/client-secrets-manager": "^3.478.0",
    "axios": "^1.6.0",
    "jest": "^29.7.0",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "tests/**/*.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "maxWorkers": 1,
    "detectOpenHandles": true,
    "forceExit": true
  }
}
